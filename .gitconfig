[user]
	name = alex289
	email = EMAIL_HERE
	signingKey = SIGN_KEY
[commit]
	gpgSign = true
[tag]
	gpgSign = true
[gpg]
	program = /opt/homebrew/bin/gpg
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[core]
	editor = code --wait
	autocrlf = input
	pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[alias]
	undo = reset --soft HEAD^

